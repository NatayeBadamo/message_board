<!DOCTYPE html>
<html lang="en">
<%- include('./header.ejs')  %>
<body>
      <%- include('./nav.ejs') %>

<div class="overflow-x-auto">
      <% if (messages.length > 0) { %>
            <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
                  <thead class="ltr:text-left rtl:text-right">
                        <tr>
                              <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Name</th>
                              <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Subject</th>
                              <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Time</th>
                              <th class="px-4 py-2"></th>
                        </tr>
                  </thead>
 
                  <tbody class="divide-y divide-gray-200">
                        <% messages.forEach(message => { %>
                              <tr>
                                    <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 text-center"><%= message.name %> </td>
                                    <td class="whitespace-nowrap px-4 py-2 text-gray-700 text-center"><%= message.subject %></td>
                                    <td class="whitespace-nowrap px-4 py-2 text-gray-700 text-center"><%= message.timeAgo %></td>
                                    <td class="whitespace-nowrap px-4 py-2">
                                          <a
                                                href="/details/<%= message.id %>"
                                                class="inline-block rounded bg-teal-600 px-4 py-2 text-xs font-medium text-white hover:bg-teal-700"
                                          >
                                                View
                                          </a>
                                    </td>
                              </tr>
                        <% }) %>
                  </tbody>
            </table>
      <% } else { %>
            <p class="text-center">No message displayed</p>
      <% } %>
</div>
</body>
</html>
